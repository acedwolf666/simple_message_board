<% if @user.errors.present? %>
  <ul>
    <% @user.errors.each do |error, message| %>
      <li> <%= "#{error.capitalize}  #{message}" %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @user do |f| %>
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %>
  <%= f.label :message, "Message:" %>
  <%= f.text_area :message %>
  <%= f.submit "Submit" %>
<% end %>
